@model IEnumerable<NesMeet.Models.Classroom>
@{
    ViewData["Title"] = "Home Page";

}
<div class="text-center">
    <h1 class="display-4"> Welcome </h1>
</div>
@if (User.IsInRole(nameof(Role.Trainee)) || User.IsInRole(nameof(Role.Trainer)))
{

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Code)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StartDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EndDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Year)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Semester)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Part)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ClassProfile)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Course)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Year)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Semester)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Part)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ClassProfile.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Course.Id)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> 
                </td>
            </tr>
            }
        </tbody>
    </table>
}